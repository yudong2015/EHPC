{
    "name": {{cluster.name}},
    "description": {{cluster.description}},
    "vxnet": {{cluster.vxnet}},
    "multi_zone_policy": "round_robin",
    "upgrade_policy": [],
    "upgrading_policy": "parallel",
    "nodes": [{
        "role":"login",
        "container": {
            "type": "kvm",
            "zone": "sh1",
            "image": "img-lcc5sdr6"
        },
        "instance_class": {{cluster.login.instance_class}},
        "cpu": {{cluster.login.cpu}},
        "memory": {{cluster.login.memory}},
        "count": {{cluster.login.count}},
        "user_access": true,
        "services": {
            "init": {
                "cmd": "appctl init"
            },
            "start": {
                "cmd": "appctl start",
                "order": 2
            },
            "stop": {
                "cmd": "appctl stop",
                "order": 1
            },
            "restart": {
               "cmd": "appctl restart",
               "order": 2
            }
        }
    }, {
        "role":"controller",
        "container": {
            "type": "kvm",
            "zone": "sh1",
            "image": "img-lcc5sdr6"
        },
        "instance_class": {{cluster.controller.instance_class}},
        "count": {{cluster.controller.count}},
        "cpu": {{cluster.controller.cpu}},
        "memory": {{cluster.controller.memory}},
        "services": {
            "init": {
                "cmd": "appctl init"
            },
            "start": {
                "cmd": "appctl start",
                "order": 1
            },
            "stop": {
                "cmd": "appctl stop",
                "order": 2
            },
            "restart": {
               "cmd": "appctl restart",
               "order": 1
            },
            "add_user": {
                "type": "custom",
                "cmd": "userctl add",
                "timeout": 180,
                "service_params": {
                    "user_name": {{service_params.controller.user_name}},
                    "password": {{service_params.controller.password}}
                }
            },
            "delete_user": {
                "type": "custom",
                "cmd": "userctl delete",
                "timeout": 180,
                "service_params": {
                    "user_name": {{service_params.controller.user_name}}
                }
            },
            "reset_password": {
                "type": "custom",
                "cmd": "userctl passwd",
                "timeout": 180,
                "service_params": {
                    "user_name": {{service_params.controller.user_name}},
                    "password": {{service_params.controller.password}},
                    "new_password": {{service_params.controller.new_password}}
                }
            },
            "scale_out": {
                "pre_check": "appctl scale-pre-check",
                "cmd": "appctl scale"
            },
            "scale_in": {
                "pre_check": "appctl scale-pre-check",
                "cmd": "appctl scale",
                "timeout": 86400
            }
        }
    },{
        "role":"compute",
        "container": {
            "type": "kvm",
            "zone": "sh1",
            "image": "img-lcc5sdr6"
        },
        "instance_class": {{cluster.compute.instance_class}},
        "count": {{cluster.compute.count}},
        "cpu": {{cluster.compute.cpu}},
        "memory": {{cluster.compute.memory}},
        "volume": {
            "size": {{cluster.compute.volume_size}},
            "mount_point":  "/data",
            "class": {{cluster.compute.volume_class}}
        },
        "services": {
            "init": {
                "cmd": "appctl init"
            },
            "start": {
                "cmd": "appctl start",
                "order": 2
            },
            "stop": {
                "cmd": "appctl stop",
                "order": 1
            },
            "restart": {
               "cmd": "appctl restart",
               "order": 2
            }
        },
        "vertical_scaling_policy": "parallel",
        "advanced_actions": ["scale_horizontal"]
    }],
    "env": {
        "admin_user": {{env.admin.user}},
        "admin_password": {{env.admin.password}},
        "admin_user_id": {{env.admin.user_id}},
        "admin_group_id": {{env.admin.group_id}},
        "nas_path": {{env.nas_path}}
    },
    "display_tabs" : {
        "cluster_user" : {
            "cmd" : "userctl list",
            "roles_to_execute_on": ["controller"]
        }
    },
    "health_check": {
        "enable": true,
        "interval_sec": 60,
        "timeout_sec": 10,
        "healthy_threshold": 3,
        "unhealthy_threshold": 3,
        "check_cmd": "appctl check"
    }
}
